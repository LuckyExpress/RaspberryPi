</body>
@{
	string siteCulture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;
	if (siteCulture == "zh-TW" || siteCulture == "zh-CN")
	{
	<script type="text/javascript">
		$(function () {
			$('.ui-tabs-anchor').css('font-size', '1.1em');
			$('.box h2').css('font-size', '1.1em');
			$('input[type=button], input[type=submit]').css('font-size', '1.1em');
			$('.cfs').css('font-size', '1.1em').css('line-height', '1.4em');
		});
	</script>
	}
}
<script type="text/javascript">
	$(function () {
		initLayout();
	});
</script>
</html>
