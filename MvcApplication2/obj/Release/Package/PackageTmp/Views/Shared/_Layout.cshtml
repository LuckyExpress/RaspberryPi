@{
	MvcApplication2.Models.LayoutModel layoutModel = ViewBag.GetLayoutModel();
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<script src="/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
	<script src="/Scripts/MyScripts/igpScripts.js" type="text/javascript"></script>
	<link href="/Content/Site.css" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/themes/MyThemes/" + @layoutModel.theme + "/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
	<header>
		<div class="bannerBody">
			<div class="leftCorner">
				&nbsp;&nbsp;&nbsp;
			</div>
			<div class="rightCorner">
				&nbsp;&nbsp;&nbsp;
			</div>
			<div class="title">
				<a style="color: white; font-size: 0.7em;" href="@Url.Action("", "Home")">The new&nbsp;</a><a style="color: orange;" href="@Url.Action("", "Home")">iGuard</a>
				<h6>with built-in web server</h6>
			</div>
			<div class="headerRow1">
				<ul>
					<li><a href="/Base/culture?c=zh-CN">简体</a></li>
					<li><a href="/Base/culture?c=zh-TW">正體</a></li>
					<li><a href="/Base/culture?c=en-US">english</a></li>
					<li>
						<input type="image" title="Swap Columns" src="/Content/images/swap.gif" onclick="return toggleColumns();" />
					</li>
				</ul>
			</div>
			<div class="logindisplay">
				@{
					if (Request.IsAuthenticated)
					{
					<text>hello @layoutModel.greetingName<br />
					@Html.ActionLink("log off", "LogOff", "Account")</text>
					}
					else
					{
					<a href="/Account/LogOn">log in</a>
					}
				}
			</div>
			<nav>
			</nav>
		</div>
		<div class="subMenuContainer">
			@{
				if (@ViewBag.SelectedMainMenu != "Home" || (@ViewBag.SelectedMainMenu == "Home" && Request.IsAuthenticated == true))
				{
				<ul class="subMenu">
				</ul>
					if (@ViewBag.SelectedMainMenu == "iGuard" || @ViewBag.SelectedMainMenu == "Employee" || @ViewBag.SelectedMainMenu == "Company")
					{
					}
					else
					{
					}
				}
				else
				{
				}

			// debug
				<div style="padding-top: 4px;" />
	   
				<div style="clear: both;" />
			}
		</div>
	</header>
	<div id="renderBody" style="min-height: 400px;">
		@RenderBody()
	</div>
	<div class="footer">
		<div class="footerBody">
			<img src="/Content/images/ISVLogoWhite.gif" style="height: 30px;" />
			Copyright &copy; 1999-@DateTime.Now.Year Lucky Technology Ltd.<br />
			<a href="http://www.lucky-tech.com">www.lucky-tech.com</a>
		</div>
	</div>
	@*	<div class="page">
		<div id="header">
			<div id="title">
				<h1>My MVC Application</h1>
			</div>
			<div id="logindisplay">
				@Html.Partial("~/Views/Shared/_LogOnPartial.cshtml")
			</div>
			<div id="menucontainer">
				<ul id="menu">
					<li>@Html.ActionLink("Home", "Index", "Home")</li>
					<li>@Html.ActionLink("About", "About", "Home")</li>
				</ul>
			</div>
		</div>
		<div id="main">
			@RenderBody()
